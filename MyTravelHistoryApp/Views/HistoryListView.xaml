<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyTravelHistoryApp.Views.HistoryListView"
             Title="HistoryListView">
    <ListView ItemsSource="{Binding Tracks}" ItemTapped="OnItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10" Margin="10" Orientation="Vertical">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:MM/dd/yyyy HH:mm}'}"/>
                            <Label Text="{Binding EndTime, StringFormat='End: {0:MM/dd/yyyy HH:mm}'}"/>
                        </StackLayout>
                        <Label Text="{Binding Duration, StringFormat='Duration: {0} h'}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>